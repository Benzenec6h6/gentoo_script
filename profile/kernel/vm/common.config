# --- Architecture ---
CONFIG_64BIT=y
CONFIG_X86=y
CONFIG_X86_64=y

# --- Core ---
CONFIG_MODULES=y
CONFIG_DEVTMPFS=y
CONFIG_DEVTMPFS_MOUNT=y
CONFIG_TMPFS=y

# --- Networking (CRITICAL) ---
CONFIG_NET=y
CONFIG_INET=y
CONFIG_NET_NS=y
CONFIG_PACKET=y
CONFIG_UNIX=y

# --- Filesystems ---
CONFIG_EXT4_FS=y
CONFIG_VFAT_FS=y

# --- Console / EFI ---
CONFIG_VT=y
CONFIG_VT_CONSOLE=y
CONFIG_FRAMEBUFFER_CONSOLE=y
CONFIG_FB_EFI=y

# --- DRM / early boot ---
CONFIG_DRM=y
CONFIG_DRM_KMS_HELPER=y
CONFIG_DRM_SIMPLEDRM=y
CONFIG_SYSFB_SIMPLEFB=y

# --- fallback framebuffer ---
CONFIG_FB=y
CONFIG_FB_SIMPLE=y
CONFIG_FB_VESA=y
