# --- Architecture ---
CONFIG_64BIT=y
CONFIG_X86=y
CONFIG_X86_64=y

# --- Core ---
CONFIG_MODULES=y
CONFIG_DEVTMPFS=y
CONFIG_DEVTMPFS_MOUNT=y
CONFIG_TMPFS=y

# --- Networking (CRITICAL) ---
CONFIG_NET=y
CONFIG_INET=y
CONFIG_NET_NS=y
CONFIG_PACKET=y
CONFIG_UNIX=y

# --- Filesystems ---
CONFIG_EXT4_FS=y
CONFIG_VFAT_FS=y

# --- Console / EFI ---
CONFIG_VT=y
CONFIG_VT_CONSOLE=y
CONFIG_FRAMEBUFFER_CONSOLE=y
CONFIG_FB_EFI=y

# --- DRM / early boot ---
CONFIG_DRM=y
CONFIG_DRM_KMS_HELPER=y
CONFIG_DRM_SIMPLEDRM=y
CONFIG_SYSFB_SIMPLEFB=y

# --- fallback framebuffer ---
CONFIG_FB=y
CONFIG_FB_SIMPLE=y
CONFIG_FB_VESA=y

# --- CPU / Paravirt ---
CONFIG_PARAVIRT=y
CONFIG_PARAVIRT_TIME_ACCOUNTING=y
CONFIG_KVM_GUEST=y
CONFIG_KVM_CLOCK=y
CONFIG_HYPERVISOR_GUEST=y

# --- Timer / Clock ---
CONFIG_GENERIC_CLOCKEVENTS=y
CONFIG_GENERIC_CLOCKEVENTS_BROADCAST=y
CONFIG_TICK_ONESHOT=y
CONFIG_NO_HZ_IDLE=y

# --- TSC ---
CONFIG_X86_TSC=y
CONFIG_X86_TSC_DEADLINE_TIMER=y
CONFIG_TSC=y
CONFIG_TSC_RELIABLE=y

# --- APIC ---
CONFIG_X86_LOCAL_APIC=y
CONFIG_X86_IO_APIC=y

# --- HZ ---
CONFIG_HZ_250=y
# CONFIG_HZ_1000 is not set
